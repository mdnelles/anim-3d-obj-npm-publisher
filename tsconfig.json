{
   "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "jsx": "react",
      "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
      "types": ["node"],
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "dist/esm",
      "sourceMap": false,
      "strict": true,
      "target": "es6",
      "noUnusedLocals": false,
      "noUnusedParameters": false
   },
   "include": ["src/**/*.ts", "src/**/*.tsx"]
}
